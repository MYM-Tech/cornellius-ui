{
  "compilerOptions": {
    "outDir": "build",
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["**/*.ts", "src/index.tsx"],
  "exclude": ["node_modules", "build"]
}