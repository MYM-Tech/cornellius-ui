    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch vite",
            "command": "yarn dev",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "launch Storybook",
            "command": "yarn storybook",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Open Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "CI",
            "type": "node",
            "preLaunchTask": "ci",
            "request": "attach",
        }

    ]
}